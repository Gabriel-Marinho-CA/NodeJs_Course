<div class="all-task-page">
    <h1 class="title-page">Todas as tasks</h1>
    {{#each tasks}}
        <ul class="list-items">
            <div class="content">
                <li>
                    {{#if this.done}}
                        <a href="/" class="done">{{this.title}}</a>
                        {{else}}
                        <a href="/">{{this.title}}</a>
                    {{/if}}
                
                    {{!-- <p class="description">{{this.description}}</p> --}}
                </li>
            </div>
            <div class="actions">

                <form action="/tasks/updatestatus" method="POST">
                    <input type="hidden" name="id" value="{{this.id}}">
                    <input type="hidden" name="done" value="{{this.done}}">
                    <button type="submit">
                        <i class="bi bi-check2"></i>
                    </button>
                </form>


                <a href="/tasks/edit/{{this.id}}">
                    <i class="bi bi-pencil-square"></i>
                </a>
             
                <form action="/tasks/remove" method="POST">
                    <input type="hidden" name="id" value="{{this.id}}">
                    <button type="submit">
                        <i class="bi bi-x-lg"></i>
                    </button>
                </form>
            </div>
    </ul>
    {{/each}}
</div>