<h1>Editando: {{users.name}}</h1>
<form action="/users/update" method="POST" class="form">

    <input type="hidden" name="id" value="{{users.id}}">

    <div class="form-control">
        <label for="name">Nome:</label>
        <input type="text" value="{{users.name}}" name="name" placeholder="Digite o nome do usuário">
    </div>
    <div class="form-control"> 
        <label for="occupation">Nome:</label>
        <input type="text"  value="{{users.occupation}}" name="occupation" placeholder="Digite sua profissao">
    </div>
    <div class="form-control form-checkbox">
        {{#if users.newsletter}}
            <input type="checkbox" name="newsletter" checked>
        {{else}}
          <input type="checkbox" name="newsletter">
        {{/if}}
        <label for="newsletter">Enviar promoções?</label>
    </div>
    <input type="submit" value="Editar">
</form>