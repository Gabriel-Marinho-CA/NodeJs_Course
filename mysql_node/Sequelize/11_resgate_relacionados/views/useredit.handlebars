<h1>Editando: {{user.name}}</h1>
<form action="/users/update" method="POST" class="form">

    <input type="hidden" name="id" value="{{user.id}}">

    <div class="form-control">
        <label for="name">Nome:</label>
        <input type="text" value="{{user.name}}" name="name" placeholder="Digite o nome do usuário">
    </div>
    <div class="form-control"> 
        <label for="occupation">Profissão:</label>
        <input type="text"  value="{{user.occupation}}" name="occupation" placeholder="Digite sua profissao">
    </div>
    <div class="form-control form-checkbox">
        {{#if user.newsletter}}
            <input type="checkbox" name="newsletter" checked>
        {{else}}
          <input type="checkbox" name="newsletter">
        {{/if}}
        <label for="newsletter">Enviar promoções?</label>
    </div>
    <input type="submit" value="Editar">
</form>



<div class="address-container">
    <h2>Endereços</h2>
    <form action="/address/create" class="form" method="POST">
        <input type="hidden" name="UserId" value="{{user.id}}">
        {{!-- <input type="hidden" name="userid" value ="{{user.id}}"> --}}

        <div class="form-control">
            <label for="street">Rua:</label>
            <input type="text" name="street" placeholder="Digite a rua" id="">
        </div>
        
        <div class="form-control">
            <label for="stree">Numero:</label>
            <input type="text" name="number" placeholder="Digiteo número" id="">
        </div>
        <div class="form-control">
            <label for="city">Cidade:</label>
            <input type="text" name="city" placeholder="Digite a cidade" id="">
        </div>

        <input type="submit" value="Incluir endereço">

    </form>
</div>


<div class="address-list">
    <h2>Lista de endereços</h2>
    {{#each user.Addresses}}
        <p>#{{this.id}} - {{this.street}} - {{this.number}} - {{this.city}}</p>
    {{/each}}
</div>