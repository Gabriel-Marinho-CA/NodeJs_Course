<h1>Usuarios Cadastrados</h1>

<div class="users">
    {{#each users}}
        <div class="item">
            <h2>{{this.name}}</h2>
            <p>{{this.occupation}}</p>
            <a href="/users/{{this.id}}">Ver detalhes</a>
            <a href="/users/edit/{{this.id}}" class="edit-btn">Editar</a>

            <form action="/users/delete/{{this.id}}" method="POST" class="form_delete">
                <input type="submit" value="Excluir">
            </form>
        </div>  
    {{/each}}
</div>